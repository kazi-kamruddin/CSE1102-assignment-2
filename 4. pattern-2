#include<stdio.h>

int main()
{
    int i,j,r,k;

    printf("Enter number of rows: ");
    scanf("%d",&r);

    for(i=1;i<=r;i++)
    {
        for(j=1 ; j<=r-i ; j++)
            printf(" ");
        for(j=1 ; j<=(2*i-1) ; j++)
            printf("*");
        printf("\n");
    }

    for (i=1;i<=r-1;i++) {
        for (j=1 ; j<=i ; j++){
            printf (" ");
        }
        for (j=1 ; j<=(2*(r-i)-1) ; j++){
            printf("*");
        }
        printf("\n");
    }
    return 0;
}
