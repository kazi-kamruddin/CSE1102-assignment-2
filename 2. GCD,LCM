#include<stdio.h>

int gcd(int, int);
int lcm(int, int);

int main() {

    int x,y,z,gcd1,gcd2,lcm1,lcm2;
    printf ("enter 3 numbers: ");
    scanf ("%d %d %d", &x ,&y, &z);

    gcd1 = gcd(x,y);
    gcd2 = gcd (gcd1,z);

    printf ("GCD of %d, %d, %d is: %d",x,y,z,gcd2);

    lcm1 = lcm(x,y);
    lcm2 = lcm(lcm1,z);

    printf ("\nLCM of %d, %d, %d is: %d",x,y,z,lcm2);

    return 0;
}

int gcd(int a, int b){
    while (a!=b){
        if (a>b)
            a -= b;
        else
            b -= a;
    }
    return a;
}

int lcm(int a, int b){
    int max;
    max = (a>b)? a:b;

    while(1){
        if((max%a == 0) && (max%b == 0)){
            break;
        }
        max++;
    }
    return max;
}
