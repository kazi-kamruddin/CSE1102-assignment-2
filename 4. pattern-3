#include<stdio.h>

int main()
{
    int i,j,r;

    printf("Enter number of rows: ");
    scanf("%d",&r);

    for (i=1 ; i<=1; i++){
        for (j=1 ; j<=(r+1)/2 ; j++){
            printf ("%d", j);
        }
        for (j=(r-1)/2 ; j>=1 ; j--){
            printf ("%d", j);
        }
    printf("\n");
    }

    for (i=1 ; i<=r-2 ; i++){
         for (j=1 ; j<=1 ; j++){
            printf ("%d", j);
         }
         for (j=1 ; j<=r-2 ; j++){
            printf (" ");
         }
         for (j=1 ; j<=1 ; j++){
            printf ("%d", j);
         }
         printf("\n");
    }

    for (i=1 ; i<=1; i++){
        for (j=1 ; j<=(r+1)/2 ; j++){
            printf ("%d", j);
        }
        for (j=(r-1)/2 ; j>=1 ; j--){
            printf ("%d", j);
        }
    printf("\n");
    }
    return 0;
}
